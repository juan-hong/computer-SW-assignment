# 연습문제 1번

class dog:
   def __init__(self, name, age):
      self.name = name
      self.age = age
   def __str__(self):
      return '이름은 '+self.name+'이고, 나이는 '+str(self.age)+'살 입니다.'
my_dog = dog('Mango', 3)
print(my_dog)


# 연습문제 2번

class counter:
   def __init__(self, number = 0):
      self.number = number
   def reset(self):
      self.number = 0
   def inc(self):
      self.number += 1
      if self.number > 99:
         self.reset(self.number)
   def dec(self):
      self.number -= 1
      if self.number < 0:
         self.reset(self.number)
   def __str__(self):
      return 'C('+str(self.number)+')'
   def __add__(self, other):
      num = self.number + other.number
      if num < 100:
        return counter(num)
      else:
        self.reset()
   def __sub__(self, other):
      num = self.number - other.number
      if num > -1:
        return counter(num)
      else:
        self.reset()
        return self

c1 = counter(10)
c1.inc()
print('c1 =', c1)

print()

c2 = counter()
c2.inc()
c2.inc()
c2.dec()
print('c2 =', c2)
c2.reset()
print('c2 =', c2)

#add, sub 확인
c1 = counter(10)
c2 = counter(20)
c3=  c1 + c2
c4 = c1 - c2
print('c3 =', c3)
print('c4 =', c4)


# 연습문제 3번

class acount:
    def __init__(self, name, acount_num, bbalance = 0):
        self.name = name
        self.acount_num = acount_num
        self.bbalance = bbalance
    def __str__(self):
        return self.name+'님의 계좌'+str(self.acount_num)+'의 잔고는'+str(self.bbalance)+'원 입니다.'
    def get_name(self):
        return self.name
    def get_acount_num(self):
        return self.acount_num
    def get_balance(self):
        return self.bbalance
    def deposit(self, other):
        self.bbalance = self.bbalance + other
        print(str(other)+'원이 입금되었습니다. 잔고는'+str(self.bbalance)+'원입니다.')
    def withdraw(self, other):
        self.bbalance = self.bbalance - other
        if other > self.bbalance:
            print('계좌의 잔고는'+str(self.bbalance)+'원으로 인출 요구 금액'+str(other)+'원보다 작습니다.')

acount1 = acount('홍길동', '1234-0001')
print(acount1)
acount1.deposit(2000)
print(acount1)
acount1.withdraw(500)
print(acount1)
acount1.withdraw(5000)


# 연습문제 4번
class student:
    def __init__(self, name, student_id, korean = 0, math = 0, science = 0, total = 0):
        self.name = name
        self.student_id = student_id
        self.korean = korean
        self.math = math
        self.science = science
        self.total = total
    def get_name(self):
        return self.name
    def get_student_id(self):
        return self.student_id
    def get_korean(self):
        return self.korean
    def get_science(self):
        return self.science
    def get_math(self):
        return self.math
    def set_korean(self, score):
        self.korean = score
    def set_math(self, score):
        self.math = score
    def set_science(self, score):
        self.science = score
    def get_total(self):
        amount = self.korean + self.math + self.science
        return amount
    def get_avg(self):
        avg = (self.korean + self.math + self.science) / 3
        return avg
    def __str__(self):
        return ('이름:'+self.name+', 학번:'+str(self.student_id)+', 국어점수:'+str(self.korean)+
                ', 수학성적:'+str(self.math)+', 과학성적:'+str(self.science)+
                ', 합계:'+str(self.get_total())+', 평균:'+str(self.get_avg()))
      
name = input('학생의 이름을 입력하세요 :')
student_id = input('학생의 학번을 입력하세요 :')

stud = student(name, student_id)

koreans = int(input('학생의 국어 성적을 입력하시오 :'))
maths = int(input('학생의 수학 성적을 입력하시오 :'))
sciences = int(input('학생의 과학 성적을 입력하시오 :'))
stud.set_korean(koreans)
stud.set_math(maths)
stud.set_science(sciences)
print(stud)


#연습문제 5번

class tv:
    def __init__(self, volume = 5, channel = 0, condition = False):
        self.volume = volume
        self.channel = channel
        self.condition = condition
    def __str__(self):
        if self.condition == 0:
            return 'TV가 꺼짐 상태입니다'
        else:
            return '볼륨 ='+str(self.volume)+', 채널 ='+str(self.channel)
    def toggle_power(self):
        if self.condition == True:
            self.condition = False
        else:
            self.condition = True
    def get_channel(self):
        return self.channel
    def set_channel(self, choice):
        if choice > 200 or choice < 0:
            print('채널오류')
        else:
            self.channel = choice
    def get_volume(self):
        return self.volume
    def set_volume(self, choice):
        if choice > 20 or choice < 0:
            print('볼륨오류')
        else:
            self.volume = choice
    def volume_up(self):
        if self.volume < 20:
            self.volume += 1
    def volume_down(self):
        if self.volume > 0:
            self.volume -= 1
    def channel_up(self):
        if self.channel < 200:
            self.channel += 1
        else:
            self.channel = 0
    def channel_down(self):
        if self.channel < 1:
            self.channel -= 1
        else:
            self.channel = 200

my_tv = tv()
print(my_tv)
my_tv.toggle_power()
print(my_tv)
my_tv.set_channel(200)
print(my_tv)
my_tv.volume_up()
my_tv.channel_up()
print(my_tv)

