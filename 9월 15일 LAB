#LAB 3-7

s = 0
for i in range(1, 101):
    s = s + i
print(s)

s = 0
for i in range(0, 101, 2):
    s = s + i
print(s)

s = 0
for i in range(1, 101, 2):
    s = s + i
print(s)

#LAB 3-8

n = 7
for i in range(-n, 0):
    for j in range(i, 0):
        print(' ', end='')
    print('#')
